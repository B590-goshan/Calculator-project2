<?xml version="1.0" encoding="utf-8"?>
<!-- Root layout for a simple calculator UI -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="2dp">

    <!-- Display area for showing calculations -->
    <TextView
        android:id="@+id/screenDisplay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical|end"
        android:paddingEnd="10dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@android:color/black"
        android:textSize="80sp"
        android:textStyle="bold" />

    <!-- Grid structure for calculator buttons -->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:stretchColumns="*">

        <!-- Row 1: Clear, Toggle Sign, Percentage, Division -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="C"
                android:textSize="30sp"
                app:cornerRadius="0dp" />
            <Button
                android:id="@+id/btnToggleSign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="+/-"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnModulus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="%"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnDivideOp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="/"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnSin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="sin"
                android:textSize="30sp"
                app:cornerRadius="0dp" />
        </TableRow>

        <!-- Row 2: Numbers 7, 8, 9, Multiplication -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btnNum7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="7"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnNum8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="8"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnNum9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="9"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnMultiplyOp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="X"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnCos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="cos"
                android:textSize="30sp"
                app:cornerRadius="0dp" />
        </TableRow>

        <!-- Row 3: Numbers 4, 5, 6, Subtraction -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btnNum4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="4"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnNum5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="5"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnNum6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="6"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnSubtractOp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="-"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnTan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="tan"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
        </TableRow>

        <!-- Row 4: Numbers 1, 2, 3, Addition -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btnNum1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="1"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnNum2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="2"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnNum3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="3"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnAddOp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="+"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnLog10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="Log 10"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
        </TableRow>

        <!-- Row 5: Number 0 (double width), Decimal Point, Equals -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:id="@+id/btnNum0"
                android:layout_span="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="2dp"
                android:text="0"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnDecimal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="."
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnEqualOp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="="
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
            <Button
                android:id="@+id/btnLn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:text="ln"
                android:textSize="30sp"
                app:cornerRadius="0dp"/>
        </TableRow>

    </TableLayout>
</LinearLayout>